<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema personalizado para LoginActivity -->
    <style name="PokemonTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Fondo inspirado en PokÃ©mon -->
        <item name="android:windowBackground">@drawable/welcome</item>

        <!-- Colores de la interfaz -->
        <item name="colorPrimary">@color/pokemonRed</item>
        <item name="colorPrimaryDark">@color/pokemonDarkRed</item>
        <item name="colorAccent">@color/pokemonYellow</item>

        <!-- Estilos de texto -->
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:fontFamily">@font/pokemonsolid</item>
    </style>

    <!-- Toolbar -->
    <style name="PokemonToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/pokemonRed</item>
        <item name="titleTextColor">@color/textWhite</item>
        <item name="subtitleTextColor">@color/textWhite</item>
       <!-- <item name="android:elevation">4dp</item> -->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- BottomNavigationMenu -->
    <style name="PokemonBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_selector</item>
        <item name="itemTextColor">@color/nav_item_selector</item>
        <item name="android:background">@color/blue_pokemon</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/PokemonBottomNavigationText</item>
        <item name="itemTextAppearanceInactive">@style/PokemonBottomNavigationText</item>
    </style>

    <style name="PokemonBottomNavigationText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:fontFamily">@font/pokemonsolid</item>
    </style>

    <!-- Botones -->
    <style name="PokemonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_pokemon_background</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:fontFamily">@font/pokemonsolid</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Texto y Titulos -->
    <style name="PokemonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:fontFamily">@font/pokemonsolid</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PokemonTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/pokemonYellow</item>
        <item name="android:fontFamily">@font/pokemonsolid</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>